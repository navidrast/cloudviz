# CloudViz Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/cloudviz

# Redis Cache (optional but recommended)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# =============================================================================
# CLOUD PROVIDER CREDENTIALS
# =============================================================================

# Azure Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================

# OAuth2 Configuration (optional)
OAUTH2_PROVIDER=azure
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URI=https://your-domain.com/auth/callback

# LDAP Configuration (optional)
LDAP_SERVER=ldap://your-ldap-server.com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_BASE_DN=dc=company,dc=com

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_SECONDS=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USERNAME=cloudviz@your-domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true
FROM_EMAIL=cloudviz@your-domain.com

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#infrastructure
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Microsoft Teams Integration (optional)
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Application Performance Monitoring
APM_SERVICE_NAME=cloudviz
APM_ENVIRONMENT=production

# Elasticsearch (for logging)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=cloudviz-logs

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Local Storage
UPLOAD_DIRECTORY=/app/uploads
MAX_UPLOAD_SIZE=50MB

# S3 Storage (optional)
S3_BUCKET_NAME=cloudviz-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Azure Blob Storage (optional)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=cloudviz-container

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================

# Mermaid Configuration
MERMAID_DEFAULT_THEME=professional
MERMAID_DEFAULT_LAYOUT=hierarchical
MERMAID_MAX_NODES=1000
MERMAID_TIMEOUT_SECONDS=60

# Rendering Configuration
RENDER_SERVICE_URL=http://localhost:3001
RENDER_TIMEOUT_SECONDS=120
RENDER_MAX_WIDTH=4096
RENDER_MAX_HEIGHT=4096

# Chart Generation
CHART_DEFAULT_WIDTH=1920
CHART_DEFAULT_HEIGHT=1080
CHART_DPI=300
CHART_FORMAT=png

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_XSS_PROTECTION=true

# API Security
API_KEY_HEADER=X-API-Key
API_TIMEOUT_SECONDS=300
MAX_REQUEST_SIZE=10MB

# =============================================================================
# BACKGROUND JOBS & PROCESSING
# =============================================================================

# Celery Configuration (if using Celery for background jobs)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIMEOUT=1800

# Job Queue Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_SECONDS=3600
JOB_RETRY_ATTEMPTS=3

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# FEATURE FLAGS & EXPERIMENTAL
# =============================================================================

# Feature Toggles
FEATURE_MULTI_CLOUD=true
FEATURE_REAL_TIME_UPDATES=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_INSIGHTS=false

# Experimental Features
EXPERIMENTAL_GRAPH_ALGORITHMS=false
EXPERIMENTAL_3D_VISUALIZATION=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Settings (only for non-production environments)
# DEV_AUTO_RELOAD=true
# DEV_MOCK_CLOUD_APIS=false
# DEV_SEED_DATA=true

# Testing Configuration
# TEST_DATABASE_URL=postgresql://test:test@localhost:5432/cloudviz_test
# TEST_REDIS_URL=redis://localhost:6379/15
# TEST_TIMEOUT=300

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual configuration
# 2. Keep this file secure and never commit it to version control
# 3. Use environment-specific values for different deployments
# 4. Regularly rotate secrets and API keys
# 5. Consider using a secrets management system for production
